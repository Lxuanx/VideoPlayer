<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/channel_list_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/video_card_margin_margin_horizontal"
    card_view:cardCornerRadius="0dip"
    card_view:cardElevation="0dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/video_card_margin_margin_horizontal">

        <android.support.v4.view.ViewPager
            android:id="@+id/recommend_focus_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/recommend_focus_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingBottom="30dip"/>

        <TextView
            android:id="@+id/recommend_focus_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:background="@color/trans_black"
            android:gravity="center"
            android:textColor="@android:color/white"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

