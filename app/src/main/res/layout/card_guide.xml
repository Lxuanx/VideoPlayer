<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:ignore="MissingPrefix">
    <TextView
        android:id="@+id/guide_hot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_guide_margin"
        android:background="@drawable/guide_selected"
        android:gravity="center"
        android:padding="@dimen/card_guide_padding"
        android:text="@string/hot_play"
        android:textColor="@color/guide_selected"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/guide_good_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_guide_margin"
        android:gravity="center"
        android:padding="@dimen/card_guide_padding"
        android:text="@string/good_score"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/guide_new_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_guide_margin"
        android:gravity="center"
        android:padding="@dimen/card_guide_padding"
        android:text="@string/new_upload"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

</LinearLayout>